<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    tools:context=".profile.UserActivity"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/welcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToCalculation"
        android:layout_width="@dimen/login_long"
        android:layout_height="@dimen/btn_long_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/btnToCalculationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="355dp"
        android:layout_height="155dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="casual"
                android:text="Basic Info"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/HeightView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/basicInfo" />

            <TextView
                android:id="@+id/genderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="Gender"
                app:layout_constraintEnd_toEndOf="@+id/AgeView"
                app:layout_constraintStart_toEndOf="@+id/AgeView"
                app:layout_constraintTop_toBottomOf="@+id/WeightView" />

            <TextView
                android:id="@+id/WeightView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Starting Weight"
                app:layout_constraintStart_toStartOf="@+id/AgeView"
                app:layout_constraintTop_toBottomOf="@+id/AgeView" />


            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Weight"
                app:layout_constraintStart_toStartOf="@+id/tvAge"
                app:layout_constraintTop_toBottomOf="@+id/tvAge" />

            <TextView
                android:id="@+id/AgeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="9dp"
                android:text="Age"
                app:layout_constraintStart_toStartOf="@+id/HeightView"
                app:layout_constraintTop_toBottomOf="@+id/HeightView" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="Height"
                app:layout_constraintStart_toEndOf="@+id/HeightView"
                app:layout_constraintTop_toTopOf="@+id/HeightView" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="9dp"
                android:text="Age"
                app:layout_constraintStart_toStartOf="@+id/tvHeight"
                app:layout_constraintTop_toBottomOf="@+id/tvHeight" />

            <TextView
                android:id="@+id/tvGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Gender"
                app:layout_constraintStart_toStartOf="@+id/tvWeight"
                app:layout_constraintTop_toBottomOf="@+id/tvWeight" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="358dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/DietPlanInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/carview_margin_start"
                android:layout_marginTop="8dp"
                android:fontFamily="casual"
                android:text="Your Diet Plan"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHighlight="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUserWeightTargetTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/tvWeightTarget"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/DietPlanInfo" />

            <TextView
                android:id="@+id/tvUserWeightTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/tvWeightTarget"
                app:layout_constraintStart_toEndOf="@+id/tvUserWeightTargetTitle"
                app:layout_constraintTop_toTopOf="@+id/tvUserWeightTargetTitle" />

            <TextView
                android:id="@+id/tvUserTargetDurationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="9dp"
                android:text="@string/tvUserTargetDurationTitle"
                app:layout_constraintStart_toStartOf="@+id/tvUserWeightTargetTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvUserWeightTargetTitle" />


            <TextView
                android:id="@+id/tvUserTargetDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="9dp"
                android:text="@string/tvUserTargetDurationTitle"
                app:layout_constraintStart_toStartOf="@+id/tvUserWeightTarget"
                app:layout_constraintTop_toBottomOf="@+id/tvUserWeightTarget" />

            <TextView
                android:id="@+id/tvUserCaloriesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/tvCalories"
                app:layout_constraintStart_toStartOf="@+id/tvUserTargetDurationTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvUserTargetDurationTitle" />


            <TextView
                android:id="@+id/tvUserCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Weight"
                app:layout_constraintStart_toStartOf="@+id/tvUserTargetDuration"
                app:layout_constraintTop_toBottomOf="@+id/tvUserTargetDuration" />

            <TextView
                android:id="@+id/tvUserPlanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Diet Plan"
                app:layout_constraintStart_toStartOf="@+id/tvUserCaloriesTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvUserCaloriesTitle" />

            <TextView
                android:id="@+id/tvUserPlan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protein"
                app:layout_constraintStart_toStartOf="@+id/tvUserCalories"
                app:layout_constraintTop_toTopOf="@+id/tvUserPlanTitle" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/colorLight"
        app:itemTextColor="@color/colorLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>